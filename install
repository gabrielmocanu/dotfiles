# Install tmux and zsh
sudo apt-get install tmux
sudo apt-get install zsh

# Initiatiate submodules
git submodule update --init --recursive

# Copy zsh files
cp zsh/.p10k.zsh ~/
cp zsh/.zshrc ~/

# Copy tmux files
cp tmux/.tmux.conf ~/

# Copy oh-my-zsh files
cp -r oh-my-zsh ~/.oh-my-zsh 

# Change default shell
chsh -s $(which zsh)
